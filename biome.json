{
    "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
    "vcs": {
        "enabled": false,
        "clientKind": "git",
        "useIgnoreFile": false
    },
    "files": {
        "ignoreUnknown": false,
        "ignore": ["*.json"]
    },
    "formatter": {
        "enabled": true,
        "indentStyle": "space",
        "indentWidth": 2,
        "lineWidth": 110,
        "formatWithErrors": true
    },
    "organizeImports": {
        "enabled": true
    },
    "linter": {
        "enabled": true,
        "rules": {
            "recommended": true,
            "correctness": {
                "noUnusedImports": {
                    "fix": "none",
                    "level": "warn"
                },
                "noUnusedVariables": {
                    "fix": "none",
                    "level": "warn"
                }
            },
            "style": {
                "noNonNullAssertion": "off"
            },
            "complexity": {
                "noStaticOnlyClass": "off",
                "noThisInStatic": "off",
                "noBannedTypes": "warn"
            },
            "suspicious": {
                "noExplicitAny": "warn",
                "noArrayIndexKey": "warn",
                "noConsoleLog": {
                    "fix": "none",
                    "level": "warn"
                }
            },
            "a11y": {
                "noSvgWithoutTitle": "off"
            }
        }
    },
    "javascript": {
        "formatter": {
            "quoteStyle": "single"
        }
    }
}
